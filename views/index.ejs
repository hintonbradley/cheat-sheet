<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/css/main.css" rel="stylesheet">
    <style>
        body {font-family: Arial;}
        
        /* Style the tab */
        .tab {
          overflow: hidden;
          border: 1px solid #ccc;
          background-color: #f1f1f1;
        }
        
        /* Style the buttons inside the tab */
        .tab button {
          background-color: inherit;
          float: left;
          border: none;
          outline: none;
          cursor: pointer;
          padding: 14px 16px;
          transition: 0.3s;
          font-size: 17px;
        }
        
        /* Change background color of buttons on hover */
        .tab button:hover {
          background-color: #ddd;
        }
        
        /* Create an active/current tablink class */
        .tab button.active {
          background-color: #ccc;
        }
        
        /* Style the tab content */
        .tabcontent {
          display: none;
          padding: 6px 12px;
          border: 1px solid #ccc;
          border-top: none;
        }
        </style>
</head>
<body>
    <div class="tab">
        <% tabs.forEach(function(tab){ %>
            <button class="tablinks" onclick="showCategory(event, '<%= tab %>')"><%- tab %></button>
        <% }); %>
    </div>    
      <div id="CSS" class="tabcontent">
        <h3>CSS</h3>
        <ul class="list-3">
          <% css.forEach(function(item){ %>
          <li><a href="css/<%= item.link %>"><%= item.title %></a></li>
          <% }); %>
        </ul>
      </div>
      
      <div id="CS" class="tabcontent">
        <h3>CS</h3>
      </div>

      <div id="Definitions" class="tabcontent">
        <h3>Definitions</h3>
        <ul class="list-3">
          <% defs.forEach(function(def){ %>
          <li><a href="definition/<%= def.link %>"><%= def.word %></a></li>
          <% }); %>
        </ul>
      </div>

      <div id="DOM" class="tabcontent">
        <h3>DOM</h3>
        <ul class="list-3">
          <% dom.forEach(function(item){ %>
          <li><a href="dom/<%= item.link %>"><%= item.title %></a></li>
          <% }); %>
        </ul>
      </div>

      <div id="Javascript" class="tabcontent">
        <h3>Javascript</h3>
        <ul><span class="test">Methods</span>
          <% meths.forEach(function(meth){ %>
          <li><a href="js/method/<%= meth.link %>"><%= meth.title %></a></li>
          <% }); %>
        </ul>
        <ul><span class="test">Events</span>
          <% evts.forEach(function(evt){ %>
          <li><a href="js/event/<%= evt.link %>"><%= evt.title %></a></li>
          <% }); %>
        </ul>
      </div>

      <script>
        function showCategory(evt, cat) {
          var i, tabcontent, tablinks;
          tabcontent = document.getElementsByClassName("tabcontent");
          for (i = 0; i < tabcontent.length; i++) {

            tabcontent[i].style.display = "none";
          }
          tablinks = document.getElementsByClassName("tablinks");
          for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
          }
          document.getElementById(cat).style.display = "block";
          evt.currentTarget.className += " active";
        }
        </script>
</body>
</html>